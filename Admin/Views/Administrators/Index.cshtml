@model List<Nossos_Contos.Entities.Admin>
@{
    ViewBag.Title = "Administrator";
}

@section Scripts {
    <script src="~/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Table').DataTable({
                lengthMenu: [5, 10, 25, 50],
                pageLength: 10,
                language: {
                    'lengthMenu': 'Display _MENU_',
                },
                order: [[1, 'desc']]
            });
        });
    </script>
}

<!-- begin:: Subheader -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-container  kt-container--fluid ">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">
                Administradores
            </h3>
            <span class="kt-subheader__separator kt-hidden"></span>
            <div class="kt-subheader__breadcrumbs">
                <a href="@Url.Action("index", "home")" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="#" class="kt-subheader__breadcrumbs-link">
                    Sistema
                </a>
                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="#" class="kt-subheader__breadcrumbs-link">
                    Administradores
                </a>
            </div>
        </div>
    </div>
</div>
<!-- end:: Subheader -->
<!-- begin:: Content -->
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand fa fa-user-cog"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Administradores
                    <small>Todos os administradores da plataforma</small>
                </h3>
            </div>
        
        </div>
        <div class="kt-portlet__body">
            <table id="Table" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="text-center">Foto Perfil</th>
                        <th class="text-center">Nome</th>
                        <th class="text-center">Sobrenome</th>
                        <th class="text-center">Username</th>
                        <th class="text-center">Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var administrator in Model)
                    {
                    <tr>
                        <td style="width: 100px; ">
                            <img src="@administrator.Picture" style="border-radius:50px; width: 100px; height: 100px; align-self: center"  />
                        </td>

                        <td class="text-center"><h3>@administrator.Name</h3></td>
                        <td class="text-center"><h3>@administrator.FamilyName</h3></td>
                        <td class="text-center"><h3>@administrator.UserName</h3></td>
                        <td class="text-center"><h3>@administrator.Email</h3></td>

                    </tr>                        
                    }
                </tbody>
            </table>            
        </div>
    </div>
</div>
<!-- end:: Content -->